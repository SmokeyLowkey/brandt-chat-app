{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "isolatedModules": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2018",
    "noEmit": true,
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "jest.setup.js"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}